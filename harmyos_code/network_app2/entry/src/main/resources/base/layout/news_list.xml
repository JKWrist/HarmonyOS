<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:top_margin="10vp"
    >

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0vp"
        ohos:orientation="vertical"
        ohos:weight="1"
        >

        <Text
            ohos:top_padding="10vp"
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="这是新闻标题"
            ohos:text_size="22fp"
            ohos:text_color="black"
            ohos:multiple_lines="true"

            ></Text>

        <Text
            ohos:top_padding="10vp"
            ohos:id="$+id:desTxt"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="这是一条新闻内容这是一条新闻内容这是一条新闻内容这是一条新闻内容"
            ohos:text_size="20fp"
            ohos:text_color="black"
            ohos:multiple_lines="true"

            ></Text>

        <Text
            ohos:id="$+id:newsTime"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="这是一条新闻时间"
            ohos:text_size="15fp"
            ohos:text_color="#FF9788A7"
            ></Text>
    </DirectionalLayout>

    <Image
        ohos:id="$+id:image"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:image_src="$media:icon"
        ></Image>


</DirectionalLayout>